{
  "name": "bocollage",
  "displayName": "boCollage",
  "description": "Bout de code à coller",
  "version": "0.0.1",
  "publisher": "borakLeRouge",
  "icon": "icone.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./ressources/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id":    "panelBoColl",
          "title": "Bo-Collage",
          "icon":  "ressources/boColl.png"
        }
      ]
    },
    "views": {
      "panelBoColl": [
        {
          "type": "webview",
          "id":   "boCollView",
          "name": ""
        }
      ]
    },
		"configuration": {
			"title": "boCollage",
			"properties": {
			  	"boCollage.dossierDeStockage": {
					"type": "string",
					"default": "",
					"description": "Adresse du dossier (dépot) de stockage des informations."
			  	}
			}
		}
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  }
}
